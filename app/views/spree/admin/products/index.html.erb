<% content_for :page_title do %>
  <%= Spree.t(:products) %>
<% end %>
<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_product), new_admin_product_url, { :class => "btn-success", :icon => 'plus', :id => 'admin_new_product' } %>
<% end if can?(:create, Spree::Product) %>

<%= form_tag destroy_multiple_admin_products_url, method: :delete do %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-md-1"><%= button Spree.t('actions.delete'), 'delete', 'submit', {class: 'btn-danger'} %></th>
      <th class="col-md-2">Image</th>
      <th class="col-md-3"><%= sort_link @search,:name, Spree.t(:name), { default_order: "desc" }, {title: 'admin_products_listing_name_title'} %></th>
      <th class="col-md-2"><%= sort_link @search,:dish_type_id, Spree.t(:type), {}, {:title => 'admin_products_listing_type_title'} %></th>
      <th class="col-md-1"><%= sort_link @search,:cost_price, Spree.t(:price), {}, {:title => 'admin_products_listing_price_title'} %></th>
      <th class="col-md-4">Tools</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td ><%= check_box_tag "products[]", product.id %></td>
        <td class="image"><%= mini_image product %></td>
        <td ><%= product.name %></td>
        <td ><%= product.dish_type.name %></td>
        <td ><%= number_to_currency(product.cost_price, :unit => product.cost_currency, precision: 0, seperator: ".", format: "%n %u") rescue '' %>
       
        </td>
        <td class="actions" data-hook="admin_products_index_row_actions">
            <%= link_to_edit product, :no_text => true, :class => 'edit' if can?(:edit, product) %>
            &nbsp;
            <%= link_to_delete product, :no_text => true if can?(:delete, product) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

