<%= render :partial => 'spree/admin/shared/dish_type_tabs', :locals => {:current =>:images}%>

<% content_for :page_title do %>
  <%= link_to Spree.t(:dish_types), admin_dish_types_url %>
  /  <%=@dish_type.name %>
<% end %>

<%= form_for [@dish_type, @dish_type_image], url: admin_dish_type_dish_type_image_url, :html => { :multipart => true } do |f| %>
  <fieldset data-hook="edit_image">
    <div data-hook="thumbnail" class="field alpha three columns align-center">
      <%= f.label Spree.t(:thumbnail) %><br>
      <%= link_to image_tag(@dish_type_image.attachment.url(:mini)), @dish_type_image.attachment.url(:dish_type) %>
    </div>
    <div class="nine columns omega">
      <%= render :partial => 'form', :locals => { :f => f } %>  
    </div>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'refresh' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= link_to_with_icon 'remove', Spree.t('actions.cancel'), admin_dish_type_url(@dish_type), :id => 'cancel_link', :class => 'button' %>
    </div>
  </fieldset>
<% end %>
