<%= render :partial => 'spree/admin/shared/ingredient_tabs', :locals => {:current =>:images}%>

<% content_for :page_title do %>
  <%= link_to Spree.t(:ingredients), admin_ingredients_url %>
  /  <%=@ingredient.name %>
<% end %>

<%= form_for [@ingredient, @ingredient_image], url: admin_ingredient_ingredient_image_url, :html => { :multipart => true } do |f| %>
  <fieldset data-hook="edit_image">
    <div data-hook="thumbnail" class="field alpha three columns align-center">
      <%= f.label Spree.t(:thumbnail) %><br>
      <%= link_to image_tag(@ingredient_image.attachment.url(:mini)), @ingredient_image.attachment.url(:ingredient) %>
    </div>
    <div class="nine columns omega">
      <%= render :partial => 'form', :locals => { :f => f } %>  
    </div>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'refresh' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= link_to_with_icon 'remove', Spree.t('actions.cancel'), admin_ingredient_url(@ingredient), :id => 'cancel_link', :class => 'button' %>
    </div>
  </fieldset>
<% end %>
